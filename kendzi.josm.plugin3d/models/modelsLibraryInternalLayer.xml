	<!-- Example only -->
	<wayNodeModel matcher="highway=*" filter="hightway=bench" 
		model="/models/pd/bench.obj"
		translate="vector()" scale="normalHeight(1,1)" direction="wayNodeDirection(90)" offset="3" />
	
		
</modelsLibrary> 
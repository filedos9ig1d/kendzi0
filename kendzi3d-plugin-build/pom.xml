			 <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>deploy</phase>
							<configuration>
							<tasks>
								<echo message="******> start uploading new version of kendzi3d-core" />
								<!-- JOSM plugin scanner require the same location for new version -->
								<copy file="${project.build.directory}/${project.build.finalName}-dep.jar" tofile="${project.build.directory}/kendzi3d.jar"/> 
								<ftp action="send" server="zibi.openstreetmap.org.pl" remotedir="/Kendzi3d/snapshot-core"
									userid="${zibi-ftp-repository.username}" password="${zibi-ftp-repository.password}"
									depends="yes" verbose="yes">
									<fileset dir="${project.build.directory}">
										<include name="kendzi3d.jar" />
									</fileset>
								</ftp>						
								<!-- <taskdef name="myTask" classname="com.acme.MyTask" -->
								<!-- classpathref="maven.plugin.classpath" /> -->
								<!-- <myTask a="b" /> -->						
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>commons-net</groupId>
						<artifactId>commons-net</artifactId>
						<version>1.4.1</version>
					</dependency>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-commons-net</artifactId>
						<version>1.6.5</version>
					</dependency>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.6.5</version>
					</dependency>
				</dependencies>
			</plugin> 
		</plugins>
	</build> 

</project>
